package Tetriminos;

import java.awt.event.KeyListener;
import java.awt.event.KeyEvent;
//handles all key inputs for the game
public class KeyInputs implements KeyListener
{     
    public boolean upPressed = false;
    public boolean downPressed = false;
    public boolean leftPressed = false;
    public boolean rightPressed = false;
    
    public KeyInputs()
    {
        
    }
    
    public void keyTyped(KeyEvent e){}//dont need this
    
    public void keyPressed(KeyEvent e){
        int key = e.getKeyCode(); 
        //System.out.println("key "+key);
        switch(key){
            case KeyEvent.VK_W:
                upPressed = true;
                break;
            case KeyEvent.VK_A:
                leftPressed = true;
                leftPressed();
                //System.out.println("leftPressed is "+leftPressed);
                break;
            case KeyEvent.VK_S:
                downPressed = true;
                break;
            case KeyEvent.VK_D:
                rightPressed = true;
                break;
        }
    }
    
    public void keyReleased(KeyEvent e){
    }
    
    public boolean leftPressed(){
        //System.out.println("left funtion running");
        if(leftPressed){
            //System.out.println("KeyInputs leftPressed is "+leftPressed);
            return true;
        }
        return false;
    }
}
